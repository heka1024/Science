<%= turbo_frame_tag quote do %>
  <div class="quote">
    <%= link_to "#{quote.name} (#{quote.id})",
      quote_path(quote),
      data: {turbo_frame: "_top"} %>
    <div class="quote__actions">
      <%= button_to "Delete",
        quote_path(quote),
        method: :delete,
        form: { data: { turbo_frame: "_top" } },
        class: "btn btn--light" %>
      <%= button_to "Edit",
        edit_quote_path(quote),
        method: :get,
        class: "btn btn--light" %>
    </div>
  </div>
<% end %>